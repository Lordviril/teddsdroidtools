<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="200sp"
    android:layout_gravity="bottom">

   	<TextView 
   		android:id="@+id/msg1"
		android:layout_width="wrap_content" 
   		android:layout_height="wrap_content"
   		android:text="@string/answer_msg1"
   		android:layout_alignParentTop="true"
   		android:layout_centerHorizontal="true"
   		android:textColor="@color/tdt_activity_msg_color_1"
   		android:background="@color/black"
      	android:typeface="monospace"
   		android:textSize="14sp"
   		android:textStyle="bold"
   		/>

    <RelativeLayout
    	android:id="@+id/buttonContainer"
    	android:layout_below="@id/msg1"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_alignParentBottom="true"
    	android:layout_marginBottom="20sp">

		<Button 
			android:id="@+id/answerCallButton"
			android:layout_width="100sp" 
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:text="@string/answer_button_label"
			android:layout_marginLeft="5sp"
			/>
			
    	<Button 
			android:id="@+id/returnToCallScreen"
			android:layout_width="70sp" 
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:text="@string/exit_button_label"
			/>

		<Button	 
			android:id="@+id/rejectCallButton"
			android:layout_width="100sp" 
			android:layout_height="wrap_content"
			android:text="@string/reject_button_label"
			android:layout_alignParentRight="true"
			android:layout_marginRight="5sp"/>
	</RelativeLayout>
</RelativeLayout>
